#-----------------------------------------------------------------------------------------------------------------------
#  Project
#-----------------------------------------------------------------------------------------------------------------------

project:
  env: dev
  src_dir: /var/www
  venv_dir: /var/www/venv
  static_dir: /var/www/static/static_root/
  media_dir: /var/www/static/media/


#-----------------------------------------------------------------------------------------------------------------------
#  Nginx
#-----------------------------------------------------------------------------------------------------------------------

nginx:
  access_log_file: /var/www/logs/nginx.access.log
  error_log_file: /var/www/logs/nginx.error.log

#-----------------------------------------------------------------------------------------------------------------------
#  Gunicorn
#-----------------------------------------------------------------------------------------------------------------------

gunicorn:
  log_file: /var/www/logs/gunicorn.log
  workers: 3
  reload: --reload

#-----------------------------------------------------------------------------------------------------------------------
#  Circus
#-----------------------------------------------------------------------------------------------------------------------

circus:
  log_file: /var/www/logs/circus.log

#-----------------------------------------------------------------------------------------------------------------------
#  MySQL
#-----------------------------------------------------------------------------------------------------------------------

mysql:
  user: user
  password: password
  database: database